{
  "appId": "com.eddystyle.app",
  "productName": "Eddy Style",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "main.js",
    "src/build/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Eddy Style",
    "deleteAppDataOnUninstall": true,
    "displayLanguageSelector": true,
    "language": "1040",
    "multiLanguageInstaller": true,
    "include": "installer.nsh"
  },
  "publish": {
    "provider": "github",
    "owner": "danieleconte3d",
    "repo": "EddyStyle",
    "private": false,
    "releaseType": "release"
  }
} 